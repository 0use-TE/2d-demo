<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
			 xmlns:vm="using:ToolSets.ViewModels"
             x:Class="ToolSets.Views.LogFilterConfigView"
	x:DataType="vm:LogFilterConfigViewModel">
	
	<DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存" Command="{Binding SaveCommand}" />
        </StackPanel>
        <StackPanel Margin="10">
            <TextBlock Text="DLL 路径:" />
            <TextBox Text="{Binding DllPath}" IsReadOnly="True" />
            <Button Content="选择 DLL 文件" Command="{Binding OpenSelectDllDialogCommand}" />
        </StackPanel>
    </DockPanel>

</UserControl>